        {% for user in users %}
            <div class="card mb-1">
                <div class="card-body">
                    <div class="card-title d-flex justify-content-between">
                        <a href="{{ path('app_user_edit', {id: user.id}) }}" class="stretched-link link-dark">
                            <h4 class="mb-1">{{ user.username }}</h4>
                        </a>
                        <small class="text-muted">Id : {{ user.id }}</small>
                    </div>
                </div>
            </div>
        {% else %}
