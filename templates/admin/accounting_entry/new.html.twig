{% extends 'base.html.twig' %}

{% set action = app.current_route == 'app_admin_accounting_entry_new' ? 'ajout' : 'édition' %}

{% block title %}transaction - {{ action }}{% endblock %}

{% block body %}
<section class="container px-4">
    <div class="w-50 m-auto">
        <h1>Transaction: {{ action }}</h1>
        {{ form_start(form) }}
        {{ form_row(form.date, {label: 'Date'}) }}
        {{ form_row(form.amount, {label: 'Montant (positif si l\'argent entre dans la cagnotte, négatif s\'il en sort)'}) }}
        {{ form_row(form.calculator, {label: 'Calculatrice (le cas échéant)'}) }}
        {{ form_row(form.receiptNumber, {label: 'Numéro de reçu (si une calculatrice est impliquée)'}) }}
        {{ form_row(form.name, {label: 'Contact (NOM Prénom)'}) }}
        {{ form_row(form.furtherInformation, {label: 'Information complémentaire'}) }}
        <button type="submit" class="btn btn-primary">Envoyer</button>
        {{ form_end(form) }}
    </div>
</section>
{% endblock %}
